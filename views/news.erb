        <h1 class="display-4">San Diego Daily News</h1>
        <p class="lead"> <%= @current_temp %> 
        </p>
        <p class="lead"> <%= @daily_temp %>
        </p>
        <hr class="my-4">
        <h2> Daily News Headlines </h2>
        <ul>
        <li> 
            <p> <%= @article_one %> 
            <a href = <%= @source_one %> > (Source) </a>
            </p> 
        </li>
        <li> 
            <p> <%= @article_two %>  
            <a href = <%= @source_two %> > (Source) </a> 
            </p>
        </li>
        <li> 
            <p> <%= @article_three %> 
            <a href = <%= @source_three %> > (Source) </a>
            </p>
        </li>
        </div>

    

